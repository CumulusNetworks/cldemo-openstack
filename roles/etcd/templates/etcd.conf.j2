
name: {{ etcd_settings.name }}
data-dir: {{ etcd_settings.data_dir }}
initial-cluster-state: {{ etcd_settings.initial_cluster_state }}
initial-cluster-token: {{ etcd_settings.initial_cluster_token }}
initial-cluster: controller=http://{{hostvars[inventory_hostname]['ansible_' + etcd_interface].ipv4.address}}:{{etcd_peer_port}}
initial-advertise-peer-urls: http://{{hostvars[inventory_hostname]['ansible_' + etcd_interface].ipv4.address}}:{{etcd_peer_port}}
advertise-client-urls: http://{{hostvars[inventory_hostname]['ansible_' + etcd_interface].ipv4.address}}:{{etcd_client_port}}
listen-peer-urls: http://0.0.0.0:{{etcd_peer_port}}
listen-client-urls: http://{{hostvars[inventory_hostname]['ansible_' + etcd_interface].ipv4.address}}:{{etcd_client_port}}
